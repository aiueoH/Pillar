package com.pillar;

import org.andengine.engine.handler.timer.TimerHandler;
import org.andengine.entity.primitive.Line;
import org.andengine.entity.primitive.Rectangle;
import org.andengine.opengl.vbo.VertexBufferObjectManager;
import org.andengine.util.color.Color;

import android.R.integer;

public class BarTimer {

	private TimerHandler timerHandler;
	
	private Line[] borderLines = new Line[4];
	private Rectangle bar;
	
	private float pX, pY, pWidth, pHeight;
	
	public BarTimer(float pX, float pY, float pWidth, float pHeight, float boderWidth, 
			Color barColor, Color borderColor, 
			VertexBufferObjectManager vertexBufferObjectManager) {
		this.pX = pX;
		this.pY = pY;
		this.pWidth = pWidth;
		this.pHeight = pHeight;
		this.bar = new Rectangle(pX, pY, pWidth, pHeight, vertexBufferObjectManager);
		this.bar.setColor(barColor);
		this.borderLines[0] = new Line(pX, pY, pX + pWidth, pY, vertexBufferObjectManager);
		this.borderLines[1] = new Line(pX + pWidth, pY, pX + pWidth, pY + pHeight, vertexBufferObjectManager);
		this.borderLines[2] = new Line(pX + pWidth, pY + pHeight, pX + pWidth, pY, vertexBufferObjectManager);
		borderLines[3] = new Line(pX, pY + pHeight, pX, pY, vertexBufferObjectManager);
		for (Line line : this.borderLines)
			line.setColor(borderColor);
	}
	
	public void setPercent(float n) {
		
	}

}
